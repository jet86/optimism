    "chai": "^4.3.3",
    "directory-tree": "^2.2.7",
    "ethers": "^5.2.0",
    "hardhat": "^2.1.2",
    "mocha": "^8.3.1",
    "omgx_core-utils": "git+https://github.com/omgnetwork/omgx_core-utils",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "glob": "^7.1.6",
    "ip": "^1.1.5",

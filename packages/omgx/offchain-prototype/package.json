{
  "name": "omgx_turing",
  "version": "0.1.0",
  "description": "Off-chain calling prototype",
  "main": "index.js",
  "repository": "git@github.com:enyalabs/omgx_turing",
  "author": "Michael Montour <mmontour@enya.ai>",
  "license": "Internal use only",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./artifacts ./artifacts-ovm ./cache ./cache-ovm",
    "build": "yarn build:contracts ; yarn build:contracts:ovm",
    "build:contracts": "hardhat compile",
    "build:contracts:ovm": "hardhat compile --network omgx",
    "test:integration": "yarn test:l1 ; yarn test:omgx",
    "test:l1": "hardhat --network l1 test",
    "test:omgx": "hardhat --network omgx test"
  },
  "devDependencies": {
    "@eth-optimism/hardhat-ovm": "^0.0.2",
    "@ethersproject/providers": "^5.2.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
